{	
	"name": "Yell",
	"patterns": [
		{
			"include": "#punctuation-colon"
		},
		{
			"include": "#punctuation-semicolon"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#statement-and"
		},
		{
			"include": "#string-single"
		},
		{
			"include": "#string-double"
		},
		{
			"include": "#bool"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#expr-single"
		},
		{
			"include": "#expr-double"
		},
		{
			"include": "#shebang"
		}
	],
	"repository": {
		"shebang": {
			"name": "comment.line.shebang.yell",
			"match": "\\A(#!).*(?=$)"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.commands.yell",
				"match": "\\b(code_start|print|println|system|var|read|sleep|toint|import|while|repeat|if|a|python|alias)\\b"
			}]
		},
		"punctuation-colon": {
			"name": "punctuation.colon.yell",
			"match": ":"
		},
		"punctuation-semicolon": {
			"name": "punctuation.terminator.statement.yell",
			"match": ";"
		},
		"comment": {
			"name": "comment.block.yell",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"statement-and": {
			"name": "keyword.operator.statement.and.yell",
			"match": "&&"
		},
		"string-double": {
			"name": "string.quoted.double.yell",
			"begin": "\"",
			"end": "\""
		},
		"string-single": {
			"name": "string.quoted.single.yell",
			"begin": "'",
			"end": "'"
		},
		"bool": {
			"name": "constant.language.boolean.yell",
			"begin": "b`",
			"end": "`"
		},
		"expr-single": {
			"name": "constant.numeric",
			"begin": "n'",
			"end": "'"
		},
		"expr-double": {
			"name": "constant.numeric",
			"begin": "n\"",
			"end": "\""
		}
	},
	"scopeName": "source.yell"
}