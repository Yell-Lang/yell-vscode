{
    "name": "yell-vscode",
    "displayName": "Yell - VS Code",
    "description": "Language support for Yell",
    "icon": "images/yell-logo.png",
    "version": "0.1.1",
    "publisher": "yell-lang",
    "engines": {
        "vscode": "^1.62.0"
    },
    "repository": {
		"type": "git",
		"url": "https://github.com/Yell-Lang/yell-vscode"
	},
    "license": "MIT",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "yell",
                "aliases": [
                    "Yell",
                    "yell"
                ],
                "extensions": [
                    ".yell"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yell",
                "scopeName": "source.yell",
                "path": "./syntaxes/yell.tmLanguage.json"
            }
        ],
        "completionProvider": {
            "resolveProvider": "true",
            "triggerCharacters": [
                ".",
                " "
            ]
        },
        "commands": [
            {
                "command": "yell.run_code",
                "title": "Run Yell code"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:yell",
        "onCommand:yell.run_code"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}
